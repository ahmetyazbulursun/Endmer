@using Endmer.Models.Entity
@model List<Tbl_Zimmetler>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="text-center fs-4">Zimmet Sahipleri</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table table-hover align-items-center mb-0">
                            <thead align="center">
                                <tr>
                                    <th>Personel</th>
                                    <th>Adet</th>
                                    <th>Tarih</th>
                                </tr>
                            </thead>
                            @foreach (var x in Model)
                            {
                                <tbody align="center">
                                    <tr>
                                        <td>@x.Tbl_Personel.AD @x.Tbl_Personel.SOYAD</td>
                                        <td>@x.ADET</td>
                                        <td>@(((DateTime)x.TARIH).ToString("dd MMMM yyyy"))</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<script>
    var urunler = document.getElementById('urunler');
    urunler.classList.add('active');
</script>