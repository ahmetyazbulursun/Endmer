@using Endmer.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Tbl_Urunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">

                <div class="card-header">
                    <h6 class="text-center fs-4">Ürünler</h6>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="float-start ms-3">
                            <a href="/Urunler/UrunEkle" class="btn btn-info">Yeni Ürün Ekle</a>
                        </div>

                        <div class="float-end me-3">
                            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
                                {
                                    LiElementClasses = new List<string>
                                    { "page-link"}
                                })
                        </div>
                    </div>
                </div>

                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table table-hover align-items-center mb-0">
                            <thead align="center">
                                <tr>
                                    <th>Resim</th>
                                    <th>Kategori</th>
                                    <th>Ürün</th>
                                    <th>Marka</th>
                                    <th>Model</th>
                                    <th>Adet</th>
                                    <th colspan="3">İşlemler</th>
                                </tr>
                            </thead>
                            @foreach (var x in Model)
                            {
                                <tbody align="center">
                                    <tr>
                                        <td><img src="@x.RESIM" width="300" /></td>
                                        <td>@x.Tbl_Kategoriler.KATEGORIADI</td>
                                        <td>@x.URUNADI</td>
                                        <td>@x.MARKA</td>
                                        <td>@x.MODEL</td>
                                        <td>@x.ADET</td>
                                        <td><a href="/Urunler/UrunDetay/@x.ID" class="btn btn-primary">Detay</a></td>
                                        <td>@Html.ActionLink("Sil", "UrunSil", new { id = x.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Ürünü Silmek İstediğinize Emin Misiniz?')" })</td>
                                        <td><a href="/Urunler/UrunGuncelle/@x.ID" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<script>
    var urunler = document.getElementById('urunler');
    urunler.classList.add('active');
</script>
