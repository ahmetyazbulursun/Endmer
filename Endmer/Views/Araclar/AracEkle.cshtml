@model Endmer.Models.Entity.Tbl_Araclar

@{
    ViewBag.Title = "AracEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">

                <div class="card-header">
                    <h6 class="text-center fs-4">Yeni Araç Ekle</h6>
                </div>

                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <div class="container">

                            <form method="post" action="/Araclar/AracEkle" enctype="multipart/form-data">
                                <div class="row mb-3">
                                    <div class="col-sm-12 col-md-4 col-lg-4">
                                        <label class="form-label">Marka - Model</label>
                                        <input type="text" class="form-control" name="MARKA" placeholder="Marka - Model.." />
                                    </div>

                                    <div class="col-sm-12 col-md-4 col-lg-4">
                                        <label class="form-label">Resim</label>
                                        <input type="file" class="form-control" name="RESIM" />
                                    </div>

                                    <div class="col-sm-12 col-md-4 col-lg-4">
                                        <label class="form-label">Kullanan Personel</label>
                                        @Html.DropDownListFor(x => x.Tbl_Personel.ID, (List<SelectListItem>)ViewBag.Debit, new { @class = "form-select" })
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-sm-12 col-md-4 col-lg-4">
                                        <label class="form-label">Plaka</label>
                                        <input type="text" class="form-control" name="PLAKA" placeholder="Plaka.." />
                                    </div>

                                    <div class="col-sm-12 col-md-4 col-lg-4">
                                        <label class="form-label">KM</label>
                                        <input type="text" class="form-control" name="KM" placeholder="KM.." />
                                    </div>

                                    <div class="col-sm-12 col-md-4 col-lg-4">
                                        <label class="form-label">Konum</label>
                                        @Html.DropDownListFor(x => x.Tbl_Konumlar.ID, (List<SelectListItem>)ViewBag.Location, new { @class = "form-select" })
                                    </div>
                                </div>

                                <div class="d-grid gap-2 mb-3">
                                    <input type="submit" value="Yeni Araç Ekle" class="btn btn-info" />
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<script>
    var araclar = document.getElementById('araclar');
    araclar.classList.add('active');
</script>