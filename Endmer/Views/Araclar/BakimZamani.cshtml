@using Endmer.Models.Entity
@model List<Tbl_BakimKayit>

@{
    ViewBag.Title = "BakimZamani";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="text-center fs-4">Bakım Zamanları</h6>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="float-start ms-3">
                            <a href="/Araclar/BakimEkle/@Session["VEHICLEID"]" class="btn btn-info">Bakım Ekle</a>
                        </div>
                    </div>
                </div>

                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table table-hover align-items-center mb-0">
                            <thead align="center">
                                <tr>
                                    <th>Tarih</th>
                                    <th>Durum</th>
                                    <th colspan="2">İşlemler</th>
                                </tr>
                            </thead>
                            @foreach (var x in Model)
                            {
                                <tbody align="center">
                                    <tr>
                                        <td>@(((DateTime)x.TARIH).ToString("dd'/'MM'/'yyyy"))</td>
                                        <td>@x.BAKIMDURUM</td>
                                        <td><a href="/Araclar/Yapildi/@x.ID" class="btn btn-success">Yapıldı</a></td>
                                        <td>@Html.ActionLink("Sil", "BakimSil", new { id = x.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstediğinize Emin Misiniz?')" })</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<script>
    var araclar = document.getElementById('araclar');
    araclar.classList.add('active');
</script>