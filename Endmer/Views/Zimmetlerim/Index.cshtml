@using Endmer.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Tbl_Zimmetler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string color = "";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">

                <div class="card-header">
                    <h6 class="text-center fs-4">Zimmetlerim</h6>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="float-end me-3">
                            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
                                {
                                    LiElementClasses = new List<string>
                                    { "page-link"}
                                })
                        </div>
                    </div>
                </div>

                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table table-hover align-items-center mb-0">
                            <thead align="center">
                                <tr>
                                    <th>Resim</th>
                                    <th>Ürün</th>
                                    <th>Marka</th>
                                    <th>Model</th>
                                    <th>Adet</th>
                                    <th>Durum</th>
                                    <th colspan="1">İşlemler</th>
                                </tr>
                            </thead>
                            @foreach (var x in Model)
                            {
                                <tbody align="center">
                                    @{
                                        if (x.ONAYMESAJ == "Zimmetli")
                                        {
                                            color = "border border-success rounded p-2 bg-success text-white";
                                        }
                                        if (x.ONAYMESAJ == "Onay Bekliyor")
                                        {
                                            color = "border border-warning rounded p-2 bg-warning text-white";
                                        }
                                        if (x.ONAYMESAJ == "Reddedildi")
                                        {
                                            color = "border border-danger rounded p-2 bg-danger text-white";
                                        }
                                    }
                                    <tr>
                                        <td><img src="@x.Tbl_Urunler.RESIM" class="img-fluid" /></td>
                                        <td>@x.Tbl_Urunler.URUNADI</td>
                                        <td>@x.Tbl_Urunler.MARKA</td>
                                        <td>@x.Tbl_Urunler.MODEL</td>
                                        <td>@x.ADET</td>
                                        <td><span class="@color">@x.ONAYMESAJ</span></td>
                                        <td><a href="/Zimmetlerim/Aktar/@x.ID" class="btn btn-primary">Aktar</a></td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<script>
    var zimmetlerim = document.getElementById('zimmetlerim');
    zimmetlerim.classList.add('active');
</script>