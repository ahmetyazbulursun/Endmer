@using Endmer.Models.Entity
@model List<Tbl_Urunler>

@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">

                <div class="card-header">
                    <h6 class="text-center fs-4">Konumdaki Ürünler</h6>
                </div>

                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table table-hover align-items-center mb-0">
                            <thead align="center">
                                <tr>
                                    <th>Resim</th>
                                    <th>Ürün</th>
                                    <th>Marka</th>
                                    <th>Model</th>
                                    <th>Barkod</th>
                                    <th>Adet</th>
                                    <th>Arızalı Adet</th>
                                </tr>
                            </thead>
                            @foreach (var x in Model)
                            {
                                <tbody align="center">
                                    <tr>
                                        <td><img src="@x.RESIM" width="150" /></td>
                                        <td>@x.URUNADI</td>
                                        <td>@x.MARKA</td>
                                        <td>@x.MODEL</td>
                                        <td>@x.BARKODNO</td>
                                        <td>@x.ADET</td>
                                        <td>@x.ARIZALIADET</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<script>
    var konumlar = document.getElementById('konumlar');
    konumlar.classList.add('active');
</script>
