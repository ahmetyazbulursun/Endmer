@using Endmer.Models.Entity
@model List<Tbl_Kategoriler>

<div class="col-sm-12 col-md-6 col-lg-6 mb-3">
    <div class="card">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-0 text-center">Kategoriler</h6>
        </div>
        <div class="card-body p-3">
            <ul class="list-group">
                @foreach (var x in Model)
                {
                    <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                        <div class="d-flex align-items-center">
                            <div class="icon icon-shape icon-sm me-3 bg-gradient-secondary shadow text-center">
                                <i class="ni ni-archive-2 text-white opacity-10"></i>
                            </div>
                            <div class="d-flex flex-column">
                                <h6 class="mb-1 text-dark text-sm">@x.KATEGORIADI</h6>
                            </div>
                        </div>
                        <div class="d-flex">
                            <a href="/Kategoriler/Urunler/@x.ID" class="btn btn-link btn-icon-only btn-rounded btn-sm text-dark icon-move-right my-auto"><i class="ni ni-bold-right" aria-hidden="true"></i></a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>