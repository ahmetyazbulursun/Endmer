@model Endmer.Models.Entity.Tbl_Kategoriler

@{
    ViewBag.Title = "KategoriGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">

                <div class="card-header">
                    <h6 class="text-center fs-4">Kategori Bilgilerini Güncelle</h6>
                </div>

                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <div class="container">

                            <form method="post">
                                <div class="row mb-3">

                                    @Html.HiddenFor(x => x.ID)

                                    <div class="col-12">
                                        <label class="form-label">Kategori Adı</label>
                                        @Html.TextBoxFor(x => x.KATEGORIADI, new { @class = "form-control", @placeholder = "Kategori Adı..", @required = "required" })
                                    </div>

                                </div>

                                <div class="d-grid gap-2">
                                    <button class="btn btn-success">Güncelle</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<script>
    var kategoriler = document.getElementById('kategoriler');
    kategoriler.classList.add('active');
</script>